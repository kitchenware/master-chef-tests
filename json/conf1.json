{
  "repos": {
    "git": [
      "http://github.com/octo-technology/master-chef.git"
    ]
  },
  "run_list": [
    "recipe[base::system]",
    "recipe[master_chef::chef_solo_scripts]",
    "recipe[confluence]",
    "recipe[logrotate]",
    "recipe[lvm]",
    "recipe[memcached]",
    "recipe[redis]"
  ],
  "node_config": {
    "confluence": {
      "location": "/toto",
      "tomcat": {
        "connectors": {
          "http": {
            "port": 9999,
            "address": "127.0.0.1"
          }
        }
      }
    },
    "logrotate" : {
      "files": {
        "fake" : {
          "chef" : ["/home/chef/fake.log"]
        }
      }
    },
    "memcached":{
      "memory":"128",
      "bind_address":"0.0.0.0"
    }
  },
  "override_attributes" : {
  }
}