{
  "repos": {
    "git": [
      "git://github.com/octo-technology/master-chef.git"
    ]
  },
  "run_list": [
    "recipe[base::system]",
    "recipe[master_chef::chef_solo_scripts]",
    "recipe[redmine]",
    "recipe[node_logstash::server]",
    "recipe[node_logstash]"
  ],
  "node_config": {
    "timezone": "Europe/Paris",
    "locales": {
        "list": ["en_US.UTF-8 UTF-8", "fr_FR.UTF-8 UTF-8"],
        "default_locale": "fr_FR.UTF-8"
    },
    "apache2": {
      "default_vhost": {
        "listen": "127.0.0.1:81"
      }
    },
    "node_logstash": {
      "configs": {
        "output": [
          "output://elasticsearch://127.0.0.1:9200"
        ]
      },
      "monitor_files": {
        "toto": {
          "files": ["/tmp/toto.log"],
          "type": "titi"
        }
      }
    }
  }
}